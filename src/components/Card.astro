---
import { getEntryBySlug } from 'astro:content';
import { Image } from 'astro:assets';

const {slug, type} = Astro.props;

const project = (await getEntryBySlug('projects', slug)).data;

var color;
if (type == "uxui") {
    color = "lime";
} else if (type == "fe") {
    color = "purple";
} else {
    color = "orange";
}

---

<div class="w-full rounded-3xl relative">
    <Image
        src={`/CV/projects/${slug}/1.png`}
        alt={project.imageDesc[0]}
        width={500}
        height={500}
        class="w-full h-full object-cover rounded-3xl"
        loading='lazy'
    />
    <div class={`w-full bg-dark text-lime text-${color} absolute bottom-0 rounded-b-3xl px-4 py-2 grid grid-cols-9 gap-2`}>
        <h6 class="col-span-7">{project.title}</h6>
        <a href={`${import.meta.env.BASE_URL}/projects/${slug}`} class="material-symbols-sharp h-min self-center col-span-2 mx-auto hover:translate-x-1">
            arrow_forward
        </a>
    </div>
</div>