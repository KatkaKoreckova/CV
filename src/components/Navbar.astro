<div id="menu" class="full-screen hidden z-50 fixed backdrop-blur-sm mt-8">
    <div class="font-semibold tracking-widest bg-white">
        <div class="flex flex-col max-w-[90%] mx-auto">
            <button id="about-btn" class="w-[95%] mx-auto outline-none border-0 text-right px-2 py-4 title" aria-label="navigate to about me button">O mne</button>
            <hr class="w-full border-0 border-b border-gray-500">
            <button id="projects-btn" class="w-[95%] mx-auto outline-none border-0 text-right px-2 py-4 title" aria-label="navigate to projects button">Projekty</button>
            <hr class="w-full border-0 border-b border-gray-500">
            <button id="contact-btn" class="w-[95%] mx-auto outline-none border-0 text-right px-2 py-4 title" aria-label="navigate to contact button">Kontakt</button>
        </div>
    </div>
</div>