<nav class="z-50  relative h-10">
    <div class="w-full py-5 bg-white shadow-md" id="navbar">
        <div class="content flex flex-row justify-between items-stretch">
            <!-- Logo -->
            <div class="self-center">
                <a href="#hero" class="outline-none p-0 w-24 font-bold text-2xl title" aria-label="navigate to home a">
                    K<span class="text-pink">K</span>
                </a>
            </div>
            <!-- Menu Items -->
            <div class="hidden space-x-6 self-center text-sm font-normal md:flex">
                <a href={`${import.meta.env.BASE_URL}#about`} class="animated-underline self-center title" aria-label="navigate to services button">
                    O mne
                </a>
                <a href={`${import.meta.env.BASE_URL}#projects`} class="animated-underline self-center title" aria-label="navigate to about me button">
                    Projekty
