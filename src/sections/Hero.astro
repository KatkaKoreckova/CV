---
import "../styles/base.css";

import { Image } from 'astro:assets';
import profilePhoto from "../assets/foto-title.png";
---

<div id="hero" class="z-40 relative m:full-screen overflow-x-hidden">
    <div class="hidden m:block">
        <div class="flex flex-col-reverse m:flex-row m:justify-around h-[100vh] max-w-[90%] w-[90%] mx-auto m:items-stretch">
            <div class="max-w-[90%] mx-auto m:w-[40%] m:self-center">
                <div class="flex flex-col space-y-10">
                    <div>
                        <div class="text-2xl font-bold ml-[6px]">Hi there, I'm</div>
                        <div class="text-8xl font-bold text-purple">KATKA</div>
                        <div class="text-sm text-gray-500 ml-[6px]">Front-end developer, UX/UI designer</div>
                    </div>
                    <a href="#projects" class="p-3 rounded-xl secondary-btn w-max" aria-label="navigate to projects a">
                        My work
                    </a>
                </div>
            </div>
            <div class="max-w-[50%] mx-auto m:w-[40%] lg:w-1/3 m:self-center">
                <Image src={profilePhoto} alt="my photo" class="w-full" id="titlePhoto"/>
            </div>
        </div>
    </div>
    <div id="mobileHero" class="block m:hidden max-w-[90%] w-[90%] mx-auto">
        <div class="text-2xl font-bold w-full text-center">Hi there,</div>
        <div class="max-w-[90%] w-2/3 sm:w-[50%] mx-auto mt-4">
            <Image src={profilePhoto} alt="my photo" class="w-full" id="titlePhoto"/>
        </div>
        <div class="w-max mx-auto">
            <div class="text-base sm:text-xl font-bold ml-[6px]">I'm</div>
            <div class="text-4xl sm:text-6xl font-bold text-purple">KATKA</div>
            <div class="text-xs text-gray-500 ml-[6px]">
                <p class="break-words">
                    Front-end developer, UX/UI designer
                </p>
            </div>
        </div>
        <div class="w-[40%] sm:w-1/4 mx-auto mt-4">
            <button onclick="scrollToSection('#projects')" class="p-2 rounded-xl secondary-btn w-full" aria-label="navigate to projects button">
                My work
            </button>
        </div>
    </div>
</div>