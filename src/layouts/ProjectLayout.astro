---
import Navbar from "@components/Navbar.astro";
import Footer from "@components/Footer.astro";

import { ViewTransitions } from 'astro:transitions';

const { title } = Astro.props

import favicon from "../assets/icon.png";
---

<html lang="en">
    <head>
        <meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="theme-color" content="#2a28a4"/>
		<meta name="description" content="Katarína Marcinčáková online portfolio with her projects and skills.">
		<title>{title} | Katarína Marcinčáková</title>
		<link rel="shortcut icon" type="image/x-icon" href={favicon.src} id="tabFavicon">

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;500;600;700;800&display=swap" rel="stylesheet">

		<script src="https://kit.fontawesome.com/471d17c5c6.js" crossorigin="anonymous"></script>
        
        <script type="module" src="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.12.0/cdn/components/carousel/carousel.js"></script>
        <ViewTransitions />
    </head>
    <body>
        <Navbar/>
        <main class="content min-h-[65vh] mt-16">
            <slot />
        </main>
        <Footer/>
        <script src="../scripts/burger-menu.js"></script>
		<script src="../scripts/script.js"></script>
    </body>
</html>